<style>
.bodyCart{
	margin: 0;
	height: auto;
}

.CartContainer{
	width: 50%;
  margin-top:30px;
  margin-bottom:30px;
	background-color: #ffffff;
  border-radius: 20px;
  box-shadow: 0px 10px 20px #1687d933;
}

.Header{
	margin: auto;
  justify-content: center;
}

.Cart-Items{
  margin-bottom:30px;
  justify-content: center;
}

.btn{
	width: 180px;
	height: 40px;
	background-color: #d9d9d9;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 20px;
	font-family: 'Open Sans';
	font-weight: 900;
	color: #202020;
	cursor: pointer;
}

</style>

<div class="bodyCart">
   <div class="CartContainer">
   	   <div class="Header"><h2>Sign Up</h2></div>
        <div class="Cart-Items">
          <%= form_with model: @user, url: sign_up_path do |f| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <% @user.errors.full_messages.each do |message| %>
                  <div><%= message %></div>
                <% end %>
              </div>
            <% end %>
            <div>
              <%= f.label :email%><br>
              <%= f.text_field :email,:size=>"50", id: 'email', class: "form-control", :required => true,placeholder:"steve@apple.com" %>
            </div>

            <div >
              <%= f.label :Name%><br>
              <%= f.text_field:name , id: 'name',:required => true, class: "form-control" %>
            </div>

            <div>
              <%= f.label :Mobile%><br>
              <%= f.text_field:mobile, id: 'mobile',:required => true, class: "form-control", placeholder:"xxxxxxxxxx" %>
            </div>
            
            <div>
              <%= f.label :AddressLine1%><br>
              <%= f.text_field:address1,id: 'address1',:required => true, class: "form-control" %>
            </div>

            <div>
              <%= f.label :AddressLine2%><br>
              <%= f.text_field:address2,id: 'address2',:required => true, class: "form-control" %>
            </div>

            <div>
              <%= f.label :Pincode%><br>
              <%= f.number_field:pincode,id: 'pincode',:required => true, class: "form-control" %>
            </div>

            <div>
              <%= f.label :password %><br>
              <%= f.password_field :password,:pattern => '^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$', id: 'password',:required => true, class: "form-control", placeholder:"password" %><br>
                  <small>Password Policy:Minimum eight characters, at least one letter and one number</small>
              </div>

            <div>
            <%= f.submit 'Sign Up', class: "btn btn-primary btn-rounded" %>
            </div>
          <% end %>
        </div>
   </div>
</div>

