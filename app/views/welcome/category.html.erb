<style>
.bodyCart{
	margin: 0;
	padding: 0;
	height: auto;
	display: flex;
	justify-content: center;
	align-items: center;
}

.CartContainer{
	width: 90%;
    margin:auto;
    margin-top:30px;
    margin-bottom:30px;
	background-color: #ffffff;
    border-radius: 20px;
    box-shadow: 0px 10px 20px #1687d933;
}

.Cart-Items{
	margin: auto;
	width: 90%;
	height: 30%;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.image-box{
    margin-left:-20px;
	width: 150px;
	text-align: center;
	border-style: groove;
	border-radius:4px;
}
.about{
    margin-top:30px;
	height: 100%;
	
	width: 50%;
}
.title{
	padding-top: 10px;
	line-height: 10px;
	font-size: 26px;
	font-family: 'Open Sans';
	font-weight: 800;
	color: #202020;
}

.counter{
	width: 15%;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.btn{
	width: 180px;
	height: 40px;
	background-color: #d9d9d9;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 20px;
	font-family: 'Open Sans';
	font-weight: 900;
	color: #202020;
	cursor: pointer;
}

.prices{
    margin-top:30px;	
    height: 100%;
	text-align: right;
}

.pad{
	margin-top: 5px;
}

hr{
    height:.5px;
    background:black;
	width: 90%;
	float: right;
	margin-right: 5%;
}
.checkout{
	float: right;
	margin-right: 5%;
	width: 75%;
}

.items{
	font-size: 22px;
	font-family: 'Open Sans';
	font-weight: 500;
	color: #909090;
	line-height: 10px;
}
.total-amount{
    padding-left: 20px;
	font-size: 22px;
	font-family: 'Open Sans';
	font-weight: 900;
	color: #202020;
    text-align: right;
}
.button{
	margin-top: 10px;
	width: 100%;
	height: 40px;
	border: none;
	background: linear-gradient(to bottom right, #B8D7FF, #8EB7EB);
	border-radius: 20px;
	cursor: pointer;
	font-size: 16px;
	font-family: 'Open Sans';
	font-weight: 600;
	color: #202020;
}
.category {
	display:flex;
	justify-content: space-around;
	border-style: groove;
	border-radius:4px;
	margin-bottom:10px;
}
</style>

<head>
	<title>Shopping Cart UI</title>
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,900" rel="stylesheet">
</head>
<div class="bodyCart">
   <div class="CartContainer">
   	   <div class="Header">
   	   	<h3 class="Heading">Filter By category</h3>
   	   </div>

	   <div class="category">
			<li><%= link_to "Mobile", "#Mobile" %></li>
			<li><%= link_to "clothing", "#clothing" %></li>
			<li><%= link_to "Electronic", "#Electronic" %></li>
			<li><%= link_to "Household", "#Household" %></li>
			<li><%= link_to "Accessories", "#Accessories" %></li>
			<li><%= link_to "Furnishing", "#Furnishing" %></li>
			<li><%= link_to "Other", "#Other" %></li>
		</div>

        <% @products.each do |product| %>
            <div class="Cart-Items">
				<section id="<%= product.category %>">
					<a href="/prod/<%= product.id %>" style="color:black;">
						<div class="image-box">
							<% if product.prodimage.attached? %>
								<%= image_tag product.prodimage, style: "width: 140px; height: 150px; display: block" %>
							<% else %>
								<div style= "width: 140px; height: 150px; display: block" >No Image for the product</div>
							<% end %>
						</div>
					</a>
				</section>
				<div class="prices">
					<div class="amount">Price - â‚¹<%= product.price %></div>
					<p class="title">Product Name - <%= product.name %></p>
				</div>
            </div>
			<hr>
        <% end %>
   </div>
</div>