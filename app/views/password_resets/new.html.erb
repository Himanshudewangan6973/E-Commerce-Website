<style>
.bodyCart{
	margin: 0;
	padding: 0;
	height: auto;
	display: flex;
	justify-content: center;
	align-items: center;
}

.CartContainer{
	width: 50%;
  margin-top:30px;
  margin-bottom:30px;
	background-color: #ffffff;
  border-radius: 20px;
  box-shadow: 0px 10px 20px #1687d933;
}

.Header{
	margin: auto;
  justify-content: center;
}

.Cart-Items{
  margin-bottom:30px;
  justify-content: center;
}

.btn{
	width: 180px;
	height: 40px;
	background-color: #d9d9d9;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 20px;
	font-family: 'Open Sans';
	font-weight: 900;
	color: #202020;
	cursor: pointer;
}
</style>

<% provide(:title, "Forgot password") %>

<div class="bodyCart">
   <div class="CartContainer">
      <div class="Header"><h2>Password Reset</h2></div>
      <div class="Cart-Items">
        <%= form_for(:password_reset_edit_path, url: password_reset_path) do |f| %>
          <p>
            <%= f.label :email %>
            <%= f.email_field :email, :size=>"50", class: 'form-control' %>
          </p>
          <p>
            <%= f.label 'password:'%><br>
            <%= f.password_field :password, class: 'form-control' %>
          </p>
          <p>
            <%= f.label 'password_confirmation:' %><br />
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </p>
          <p>
            <%= f.submit "Update", class: "btn btn-primary" %>
          </p>
        <% end %>
      </div>
   </div>
</div>
