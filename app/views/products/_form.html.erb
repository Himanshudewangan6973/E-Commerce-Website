<style>
.bodyCart{
	margin: 0;
	padding: 0;
	
	height: auto;
	display: flex;
	justify-content: center;
	align-items: center;
}

.CartContainer{
  display:flex;
	width: 70%;
  margin-top:30px;
  margin-bottom:30px;
	background-color: #ffffff;
  border-radius: 20px;
  box-shadow: 0px 10px 20px #1687d933;
  justify-content: center;
}

.Header{
	margin: auto;
  justify-content: center;
}

.Cart-Items{
  margin-bottom:30px;
  justify-content: center;
}

.btn{
	width: 180px;
	height: 40px;
	background-color: #d9d9d9;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 20px;
	font-family: 'Open Sans';
	font-weight: 900;
	color: #202020;
	cursor: pointer;
}

</style>

<div class="float-right" style="position:relative">
    <%= link_to 'Cancel', products_path, class:"btn btn-danger btn-rounded float-right"%>
  </div>
<div>
  <div class="bodyCart">  
    
    <div class="CartContainer">
      <div class="Cart-Items">
        <%= form_with model: @product do |form|%>
          <!-- Text input-->
          <%= form.label :name %>
          <%= form.text_field :name, :size=>"100", :required => true,class:"form-control"  %>
          <% @product.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
          <% end %>
          <%= form.label :desc %>
          <%= form.text_area :desc, rows:2, cols:45, class:"textarea form-control",:required => true %>
          <% @product.errors.full_messages_for(:desc).each do |message| %>
            <div><%= message %></div>
          <% end %>
          <%= form.label :category %>
          <%= form.select :category, ["Mobile","clothing","Electronic","Household","Accessories","Furnishing","Other"], class:" form-control" %>
          <% @product.errors.full_messages_for(:category).each do |message| %>
            <div><%= message %></div>
          <% end %>
          <%= form.label :price %>
          <%= form.number_field :price,:required => true, class:"form-control"%>
          <% @product.errors.full_messages_for(:price).each do |message| %>
            <div><%= message %></div>
          <% end %>
          <%= form.label :quantity %>
          <%= form.number_field :quantity,min: 1,:required => true, class:"form-control"%>
          <% @product.errors.full_messages_for(:quantity).each do |message| %>
            <div><%= message %></div>
          <% end %>
          <%= form.label :product_image %>
          <%= form.file_field :prodimage, class:"form-control"%>
          <!-- Button -->
          <div><%= form.submit class:"btn btn-primary btn-rounded"%></div>
        <% end %>
      </div>
    </div>

    <div style="margin-left:50px; width:20%;">
      <% if @product.prodimage.attached?%>
        <%= image_tag @product.prodimage, style: "width: 450px; height: 450px; display: block" %>
      <% end %>	
    </div>
  <div>
</div>