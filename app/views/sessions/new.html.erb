<style>
.bodyCart{
	margin: 0;
	padding: 0;
	
	height: auto;
	display: flex;
	justify-content: center;
	align-items: center;
}

.CartContainer{
	width: 50%;
  margin-top:30px;
  margin-bottom:30px;
	background-color: #ffffff;
  border-radius: 20px;
  box-shadow: 0px 10px 20px #1687d933;
}

.Header{
	margin: auto;
  justify-content: center;
}

.Cart-Items{
  margin-bottom:30px;
  justify-content: center;
}

.btn{
	width: 180px;
	height: 40px;
	background-color: #d9d9d9;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 20px;
	font-family: 'Open Sans';
	font-weight: 900;
	color: #202020;
	cursor: pointer;
}

</style>

<div class="bodyCart">
   <div class="CartContainer">
   	    <div class="Header"><h2>Sign In</h2></div>
        <div class="Cart-Items">
          <%= form_with url: sign_in_path do |f| %>
            <div class="mb-3">
            <%= f.label :email%><br>
            <%= f.text_field :email, :size=>"50",:required => true, class: "form-control", placeholder:"steve@apple.com" %>
            </div>
            <div class="mb-3">
            <%= f.label :password %><br>
            <%= f.password_field :password,:required => true, class: "form-control", placeholder:"password" %><br>
            </div>
            
            <div class="mb-3">
            <%= f.submit 'Log In', class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
   </div>
</div>
